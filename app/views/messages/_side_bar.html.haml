.SideBar
  .SideHeader
    .SideHeader__list
      .SideHeader__list__userName
        = current_user.name
      .SideHeader__list__iconList
        = link_to new_group_path, class: "SideHeader__list__iconList--iconBtn" do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user.id), class: "SideHeader__list__iconList--iconBtn" do
          = icon('fas', 'cog')

  .SideGroupLists
    - current_user.groups.each do |group|
      = link_to group_messages_path(group.id), class: "SideGroupLists__Group" do
        .SideGroupLists__Group__GroupName
          = group.name
        .SideGroupLists__Group__NewMessage
          = group.show_last_message
